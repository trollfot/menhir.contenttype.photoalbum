<tal:photoalbum-view>
  <h1 tal:content="context/title" />
  <div class="photo-album" tal:condition="view/contents">   

    <div class="gallery-thumbs navigation">
      <ul class="thumbs noscript">
	<tal:thumbs repeat="content view/contents">
	  <li style="opacity: 0.67">
	    <span class="clipout" tal:define="url content/@@absolute_url">
	      <a class="thumb clipin"
		 tal:attributes="href string:$url/++thumbnail++image.preview;
				 alt content/title;">
		<img src=""
		     tal:attributes="src string:$url/++thumbnail++image.thumb;
				     alt content/title;"
		     />
	      </a>
	    </span>
	    <div class="caption" tal:content="content/title" />
	  </li>
	</tal:thumbs>
      </ul>
    </div>
    <div class="gallery">
      <div class="controls"></div>
      <div class="loader"></div>
      <div class="main-image"></div>
      <div class="captions"></div>
    </div>    
    <div class="gallery-footer" />
  </div>

  <p class="discreet"
     tal:condition="not: view/contents"
     i18n:translate="description_no_items_in_folder">
    There are currently no images in this photo album.
  </p>
</tal:photoalbum-view>
