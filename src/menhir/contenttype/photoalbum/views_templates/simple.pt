<tal:photoalbum-view>
  <h1 tal:content="context/title" />

  <div class="photo-album"
       tal:condition="view/contents">   

  <div class="gallery-thumbs">
    <ul class="thumbs noscript">
      <li tal:repeat="content view/contents">
	<a class="thumb image-link"
	   tal:define="url content/@@absolute_url"
	   tal:attributes="href string:$url/++thumbnail++image.preview;
			   alt content/title;
			     title content/title;
			     rel string:gallery-${view/uid}">
	  <img src=""
	       tal:attributes="src string:$url/++thumbnail++image.square;
			       alt content/title;"
		 />
	</a>
      </li>
    </ul>
  </div>
</div>

<p class="discreet"
   tal:condition="not: view/contents"
   i18n:translate="description_no_items_in_folder">
  There are currently no images in this photo album.
</p>

</tal:photoalbum-view>
